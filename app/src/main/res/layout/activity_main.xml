<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorSecondary"
                                             tools:context="no.student.nkv.tictactoe.MainActivity"
>


    <Button
            android:id="@+id/btnSingle"
            style="@style/AppTheme"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_marginTop="101dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_bold"
            android:text="Single Player"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/btnMulti"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTicTacToe"
    />

    <Button
            android:id="@+id/btnMulti"
            style="@style/AppTheme"
            android:layout_width="230dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_bold"
            android:text="Multiplayer"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSingle"/>

    <Button
            android:id="@+id/btnMulti2"
            style="@style/AppTheme"
            android:layout_width="230dp"
            android:layout_height="46dp"
            android:layout_marginTop="72dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_bold"
            android:text="HighScores"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSingle" app:layout_constraintHorizontal_bias="0.497"/>
    <ImageView
            android:id="@+id/imgTicTacToe"
            android:layout_width="367dp"
            android:layout_height="135dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tictactoelogo"
    />

    <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/imgTicTacToe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?android:attr/actionModeCloseDrawable"/>

    <ImageView
            android:id="@+id/imageViewQuit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/imgTicTacToe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_lock_power_off" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
